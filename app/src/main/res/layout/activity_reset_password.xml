<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:padding="28dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:layout_marginBottom="30dp" />

        <!-- ðŸ”¹ Logo -->
        <ImageView
            android:id="@+id/logoImageView"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/lado_logo"
            android:layout_marginBottom="24dp"
            android:contentDescription="LADO Logo" />

        <!-- ðŸ”¸ Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reset Password"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:layout_marginBottom="30dp" />

        <!-- ðŸŸ© New Password Label -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="New Password"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:layout_marginBottom="6dp" />

        <!-- ðŸ”‘ New Password -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingEnd="12dp"
            android:layout_marginBottom="10dp">

            <EditText
                android:id="@+id/editTextNewPassword"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:hint="Enter new password"
                android:inputType="textPassword"
                android:padding="12dp"
                android:textColor="#000000"
                android:textSize="15sp"
                android:background="@android:color/transparent" />

            <ImageView
                android:id="@+id/iconToggleNewPassword"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_visibility_30"
                android:contentDescription="Toggle password visibility" />
        </LinearLayout>

        <!-- ðŸ§© Password Rules List -->
        <LinearLayout
            android:id="@+id/passwordRulesContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="25dp">

            <LinearLayout
                android:id="@+id/ruleLength"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingVertical="4dp">
                <ImageView
                    android:id="@+id/iconLength"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_redcross_48" />
                <TextView
                    android:id="@+id/textRuleLength"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="At least 8 characters"
                    android:textColor="#D32F2F"
                    android:textSize="13sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ruleUpper"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingVertical="4dp">
                <ImageView
                    android:id="@+id/iconUpper"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_redcross_48" />
                <TextView
                    android:id="@+id/textRuleUpper"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="Contains uppercase letter"
                    android:textColor="#D32F2F"
                    android:textSize="13sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ruleLower"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingVertical="4dp">
                <ImageView
                    android:id="@+id/iconLower"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_redcross_48" />
                <TextView
                    android:id="@+id/textRuleLower"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="Contains lowercase letter"
                    android:textColor="#D32F2F"
                    android:textSize="13sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ruleNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingVertical="4dp">
                <ImageView
                    android:id="@+id/iconNumber"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_redcross_48" />
                <TextView
                    android:id="@+id/textRuleNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="Contains a number"
                    android:textColor="#D32F2F"
                    android:textSize="13sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ruleSymbol"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingVertical="4dp">
                <ImageView
                    android:id="@+id/iconSymbol"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_redcross_48" />
                <TextView
                    android:id="@+id/textRuleSymbol"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="Contains a special character (@.,;_)"
                    android:textColor="#D32F2F"
                    android:textSize="13sp" />
            </LinearLayout>
        </LinearLayout>

        <!-- ðŸŸ© Confirm Password Label -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Confirm Password"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:layout_marginBottom="6dp" />

        <!-- ðŸ”‘ Confirm Password -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingEnd="12dp"
            android:layout_marginBottom="35dp">

            <EditText
                android:id="@+id/editTextConfirmPassword"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:hint="Confirm password"
                android:inputType="textPassword"
                android:padding="12dp"
                android:textColor="#000000"
                android:textSize="15sp"
                android:background="@android:color/transparent" />

            <ImageView
                android:id="@+id/iconToggleConfirmPassword"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_visibility_30"
                android:contentDescription="Toggle password visibility" />
        </LinearLayout>

        <!-- ðŸŸ¢ Confirm Button -->
        <Button
            android:id="@+id/buttonConfirmReset"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Confirm"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:textSize="16sp"
            android:background="@drawable/btn_validate_background" />

    </LinearLayout>
</ScrollView>
