<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffc40c">

    <!-- Logo LADO -->
    <ImageView
        android:id="@+id/logoLadoTop"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/lado_logo"
        android:contentDescription="Logo LADO"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp"/>

    <!-- ScrollView -->
    <ScrollView
        android:id="@+id/scrollContent"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/logoLadoTop"
        app:layout_constraintBottom_toTopOf="@id/bottomNavigation"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Message de bienvenue -->
            <TextView
                android:id="@+id/textWelcome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ‘‹ Bonjour utilisateur"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="#14213D"
                android:layout_marginBottom="16dp"/>

            <!-- Dernier obstacle dÃ©tectÃ© -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ“Œ Dernier obstacle dÃ©tectÃ© : "
                        android:textStyle="bold"
                        android:textColor="#14213D"/>
                    <!-- Statut ESP32 -->
                    <TextView
                        android:id="@+id/textESPStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Connexion ESP32..."
                        android:textSize="16sp"
                        android:textColor="#14213D"
                        android:layout_marginBottom="16dp"/>


                    <TextView
                        android:id="@+id/textBattery"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="-- m"
                        android:textColor="#14213D"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Capteurs en temps rÃ©el -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ“¡ Capteurs en temps rÃ©el"
                android:textColor="#14213D"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_marginBottom="8dp"/>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- Ultrasonic -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="6dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Distance : "
                            android:textStyle="bold"
                            android:textColor="#14213D"/>

                        <TextView
                            android:id="@+id/textUltrasonic"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="-- cm"
                            android:textColor="#14213D"/>
                    </LinearLayout>

                    <!-- Camera -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="6dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="CamÃ©ra : "
                            android:textStyle="bold"
                            android:textColor="#14213D"/>

                        <TextView
                            android:id="@+id/textCamera"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="--"
                            android:textColor="#14213D"/>
                    </LinearLayout>

                    <!-- Current distance -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="6dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Current Distance : "
                            android:textStyle="bold"
                            android:textColor="#14213D"/>

                        <TextView
                            android:id="@+id/textCurrentDistance"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="--"
                            android:textColor="#14213D"/>
                    </LinearLayout>

                    <!-- Current status -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="6dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Current Status : "
                            android:textStyle="bold"
                            android:textColor="#14213D"/>

                        <TextView
                            android:id="@+id/textCurrentStatus"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="--"
                            android:textColor="#14213D"/>
                    </LinearLayout>

                    <!-- Timestamp -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Horodatage : "
                            android:textStyle="bold"
                            android:textColor="#14213D"/>

                        <TextView
                            android:id="@+id/textCurrentStamp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="--"
                            android:textColor="#14213D"/>
                    </LinearLayout>

                    <!-- Last Sync -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="DerniÃ¨re synchronisation : "
                            android:textStyle="bold"
                            android:textColor="#14213D"/>

                        <TextView
                            android:id="@+id/textLastSync"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="--"
                            android:textColor="#14213D"/>
                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>

    <!-- Bottom Navigation -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="#14213D"
        app:itemIconTint="@color/gold"
        app:itemTextColor="@color/gold"
        app:menu="@menu/bottom_nav_menu"/>

</androidx.constraintlayout.widget.ConstraintLayout>
