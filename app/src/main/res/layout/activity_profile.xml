<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffc40c">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="24dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <!-- Image profil circulaire avec icône de modification -->
            <FrameLayout
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginTop="24dp">

                <!-- Image de profil -->
                <ImageView
                    android:id="@+id/imageProfile"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:background="@drawable/circle_mask"
                    android:clipToOutline="true"
                    android:src="@drawable/userimage_cercle" />

                <!-- Icône de modification avec Touch target ≥ 48dp -->
                <ImageView
                    android:id="@+id/btnChangePhoto"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_gravity="bottom|end"
                    android:layout_margin="4dp"
                    android:src="@drawable/ic_edit"
                    android:contentDescription="Modifier la photo"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="@drawable/circle_white_bg"
                    android:padding="8dp"/>
            </FrameLayout>

            <!-- Nom d'utilisateur -->
            <TextView
                android:id="@+id/textUsername"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Username"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#14213D"
                android:layout_marginTop="16dp"
                android:gravity="center"/>

            <!-- Boutons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="24dp">

                <Button
                    android:id="@+id/btnModifyProfile"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="Modify Profile"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:background="@drawable/btn_dark_style"
                    android:layout_marginBottom="16dp" />

                <Button
                    android:id="@+id/btnChangePassword"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="Change Password"
                    android:textColor="#14213D"
                    android:textStyle="bold"
                    android:background="@drawable/btn_light_style"
                    android:layout_marginBottom="16dp" />

                <Button
                    android:id="@+id/btnLogout"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="Log out"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:background="@drawable/btn_orange_style" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <!-- Bottom Navigation -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#14213D"
        app:itemIconTint="@color/gold"
        app:itemTextColor="@color/gold"
        app:menu="@menu/bottom_nav_menu" />

</LinearLayout>
