<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="#ffc40c"
    tools:context=".Views.LoginActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        app:cardCornerRadius="24dp"
        app:cardElevation="12dp"
        android:background="@android:color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp"
            android:gravity="center_horizontal">

            <ImageView
                android:id="@+id/logoLado"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/lado_logo"
                android:contentDescription="Logo LADO"
                android:layout_marginBottom="24dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Log In"
                android:textColor="#14213D"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_marginBottom="24dp" />

            <EditText
                android:id="@+id/editUsername"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/edittext_background"
                android:hint="Mail"
                android:textColor="#14213D"
                android:textColorHint="#fdee00"
                android:textSize="16sp"
                android:padding="12dp"
                android:drawablePadding="8dp"
                android:layout_marginBottom="16dp"
                android:drawableStart="@drawable/ic_baseline_mail_24" />

            <EditText
                android:id="@+id/editPassword"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/edittext_background"
                android:hint="Password"
                android:textColor="#14213D"
                android:textColorHint="#fdee00"
                android:textSize="16sp"
                android:inputType="textPassword"
                android:padding="12dp"
                android:drawablePadding="8dp"
                android:layout_marginBottom="16dp"
                android:drawableStart="@drawable/ic_baseline_lock_24" />

            <TextView
                android:id="@+id/textForgot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Forgot password?"
                android:textSize="14sp"
                android:textColor="#FCA311"
                android:layout_gravity="end"
                android:layout_marginBottom="24dp" />

            <Button
                android:id="@+id/btnLogin"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Log In"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:backgroundTint="#14213D"
                android:layout_marginBottom="16dp"
                app:cornerRadius="20dp" />

            <TextView
                android:id="@+id/textSignUp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Not yet registered? Sign Up"
                android:textSize="14sp"
                android:textColor="#14213D"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
