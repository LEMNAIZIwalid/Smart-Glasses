<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.LADO"
        tools:targetApi="31">

        <!-- 🏁 Page principale au démarrage -->
        <activity
            android:name=".Views.MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.LADO">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- 🔐 Page Login -->
        <activity
            android:name=".Views.LoginActivity"
            android:exported="false"
            android:label="Login"
            android:theme="@style/Theme.LADO" />

        <!-- 🏠 Page Home -->
        <activity
            android:name=".Views.HomeActivity"
            android:exported="false"
            android:label="Home"
            android:theme="@style/Theme.LADO" />

        <!-- 🧾 Page Sign In -->
        <activity
            android:name=".Views.SignInActivity"
            android:exported="false"
            android:label="Sign In"
            android:theme="@style/Theme.LADO" />

        <!-- 🎥 Page Livestream -->
        <activity
            android:name=".Views.LivestreamActivity"
            android:exported="false"
            android:label="Livestream"
            android:theme="@style/Theme.LADO" />

        <!-- 📊 Page Statics -->
        <activity
            android:name=".Views.StaticsActivity"
            android:exported="false"
            android:label="Statistics"
            android:theme="@style/Theme.LADO" />

        <!-- 🔔 Page Notifications -->
        <activity
            android:name=".Views.NotificationsActivity"
            android:exported="false"
            android:label="Notifications"
            android:theme="@style/Theme.LADO" />

        <!-- 👤 Page Profile -->
        <activity
            android:name=".Views.ProfileActivity"
            android:exported="false"
            android:label="Profile"
            android:theme="@style/Theme.LADO" />

    </application>

</manifest>
